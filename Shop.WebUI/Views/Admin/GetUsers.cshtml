@model IEnumerable<Shop.Domain.Entities.User>
@{Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список юзерів</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Login</th>
                <th class="text-right">Прізвище</th>
                <th class="text-center">Ім’я</th>
                <th class="text-center">По-батькові</th>
                <th class="text-center">Посада</th>
                <th class="text-center">РольID</th>
                <th class="text-center">Дія</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ID</td>
                    @*<td class="text-right">@Html.ActionLink(item.Login,"EditUser",new { item.ID})</td>*@
                    <td>@Html.ActionLink(item.Login, "EditUser", new { item.ID })</td>
                    <td class="text-right">@item.FirstName</td>
                    <td class="text-right">@item.SecondName</td>
                    <td class="text-right">@item.LastName</td>
                    <td class="text-right">@item.Position</td>
                    <td class="text-right">@item.RoleId</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteUser", "Admin"))
                        {
                            @Html.Hidden("ID", item.ID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Видалити" />
                        }
                        @*@using (Html.BeginForm("EditUser", "Admin"))
                            {
                                @Html.Hidden("ID", item.ID)
                                <input type="submit"
                                       class="btn btn-default btn-xs"
                                       value="Edit" />
                            }*@
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Додати", "CreateUser", null,
                                               new { @class = "btn btn-default" })
    </div>
</div>


