@model IEnumerable<string>

@Html.ActionLink("Усі категорії", "List", "Ware", null,
    new { @class = "btn allcategory btn-block btn-default btn-lg" })

<div class="category">
    <ul>
        @foreach (var link in Model)
        {
            <li>
                @Html.RouteLink(link, new
                {
                    controller = "Ware",
                    action = "List",
                    category = link,
                    page = 1
                }, new
                {
                    @class = (link == ViewBag.SelectedCategory ? " btn-primary" : "")
                })
            </li>
        }
    </ul>
</div>